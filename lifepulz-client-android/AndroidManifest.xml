<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.lifepulz"
      android:versionCode="1"
      android:versionName="1.0">
      
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:name=".client.android.Lifepulz">
        <activity android:name=".client.android.LoginActivity" android:label="@string/login_activity_name">
        </activity>
        <activity android:name=".client.android.DashboardActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".client.android.PresenceActivity"  android:label="@string/presence_activity_name">
        </activity>
        <activity android:name=".client.android.ProfileActivity"  android:label="@string/profile_activity_name">
        </activity>
        <activity android:name=".client.android.SelectorsActivity" android:label="@string/selectors_activity_name">
        </activity>
        <activity android:name=".client.android.SettingsActivity"  android:label="@string/settings_activity_name">
        </activity>
        <activity android:name=".client.android.InterestActivity"  android:label="@string/interest_activity_name">
        </activity>
        <uses-library android:name="android.test.runner"/>
    </application>
    
    <uses-sdk android:minSdkVersion="7" />
    
	<instrumentation
			android:name="android.test.InstrumentationTestRunner" 
			android:functionalTest="true"
			android:targetPackage="com.lifepulz" 
			android:label="Lifepulz Tests"/>
			
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    
</manifest>
 